@model E_CommerceProject.Models.Category

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/AdminLayoutPage.cshtml";
}

<div class="card mb-4 border-danger mb-3" style="max-width:40rem">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        View Product
    </div>
    <div class="card-body">

        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.CategoryName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CategoryName)
                </dd>



            </dl>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">

                @Html.ActionLink("Edit", "Edit", new { id = Model.CategoryId }, new { @class = "btn btn-primary" })
                <a onclick="window.history.back(); " class="btn btn-danger">Back to list</a>
            </div>
        </div>
    </div>
</div>
</div>





